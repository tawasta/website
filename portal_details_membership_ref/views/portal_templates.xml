<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="portal_layout_membership_ref" inherit_id="portal.portal_layout">
        <xpath
            expr="//div[@class='o_portal_my_details']//div[@t-field='user_id.partner_id']"
            position="after"
        >
            <t t-if="user_id.partner_id.ref">
                <div style="margin-top: 0.5em;">
                    <i
                        class="fa fa-id-card fa-fw"
                        role="img"
                        aria-label="Membership Number"
                        title="Membership Number"
                    />
                    <span
                        itemprop="membershipNumber"
                        t-esc="user_id.partner_id.ref"
                        style="padding-left: 0.3em;"
                    />
                </div>
            </t>
        </xpath>
    </template>
</odoo>
