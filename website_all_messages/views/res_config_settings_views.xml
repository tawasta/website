<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.all.messages</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="650"/>
        <field name="inherit_id" ref="website_messages_base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_messages_settings']" position="inside">
                <div id="website_all_messages_page" class="col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="all_messages_page"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="all_messages_page"/>
                        <div class="text-muted">
                            Enable all messages' page
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
