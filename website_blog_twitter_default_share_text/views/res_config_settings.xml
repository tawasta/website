<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@id='website_settings']/div[@id='social_default_image_setting']"
                position="after"
            >
                <div
                    class="col-12 o_setting_box"
                    id="twitter_default_blog_post_share_text_settings"
                >
                    <div class="o_setting_right_pane">
                        <label
                            string="Twitter default Blog Post share text"
                            for="twitter_default_blog_post_share_text"
                        />
                        <span
                            class="fa fa-lg fa-globe"
                            title="Values set here are website-specific."
                            groups="website.group_multi_website"
                        />
                        <div class="text-muted">
                            Text to be suggested as default, when sharing a blog post to Twitter, e.g.
                            'Amazing blog article: %s! Check it live: %s'.
                            "The first %s placeholder contains the blog post title. The second %s placeholder contains the URL.
                        </div>
                        <field name="twitter_default_blog_post_share_text" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
