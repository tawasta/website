<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="assets_frontend"
        name="google_analytics_4_assets"
        inherit_id="website.assets_frontend"
    >
        <xpath expr="." position="inside">
            <t
                t-if="request.env['website'].get_current_website().google_analytics_4_tracking_id"
            >
                <t
                    t-set="GOOGLE_ANALYTICS_4_TRACKING_ID"
                    t-value="request.env['website'].get_current_website().google_analytics_4_tracking_id"
                />
                <script
                    id="google_analytics_4"
                    async="1"
                    t-attf-src="https://www.googletagmanager.com/gtag/js?id={{ GOOGLE_ANALYTICS_4_TRACKING_ID }}"
                />
                <script>
                    window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', '<t
                        t-esc="GOOGLE_ANALYTICS_4_TRACKING_ID"
                    />');
                </script>
            </t>
        </xpath>
    </template>
</odoo>
