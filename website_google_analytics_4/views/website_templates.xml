<odoo>
    <template id="signup" name="GA4 Sign Up Form" inherit_id="auth_signup.signup">
        <xpath expr="//div[hasclass('oe_login_buttons')]/button" position="attributes">
            <attribute name="onclick">gtagClick()</attribute>
        </xpath>
        <xpath expr="//div[hasclass('oe_login_buttons')]" position="after">
            <script type="text/javascript">
                function gtagClick() {
                    <t
                    t-if="website and website.google_analytics_4_tracking_id and not editable"> gtag('event', 'sign_up', { method: 'Odoo' });</t>
                };
            </script>
        </xpath>
    </template>
    <template id="login" name="GA4 Login Form" inherit_id="web.login">
        <xpath
            expr="//div[contains(@t-attf-class, 'oe_login_buttons')]/button"
            position="attributes">
            <attribute name="onclick">gtagClick()</attribute>
        </xpath>
        <xpath
            expr="//div[contains(@t-attf-class, 'oe_login_buttons')]"
            position="after">
            <script type="text/javascript">
                function gtagClick() {
                    <t
                    t-if="website and website.google_analytics_4_tracking_id and not editable"> gtag('event', 'login', { method: 'Odoo' });</t>
                };
            </script>
        </xpath>
    </template>
</odoo>
