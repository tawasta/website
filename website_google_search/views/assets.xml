<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="assets_frontend"
        name="cse_assets"
        inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <t t-if="request.env['website'].get_current_website().has_google_search">
                <t
                    t-set="GOOGLE_SEARCH_ENGINE_ID"
                    t-value="request.env['website'].get_current_website().google_search_engine_id"
                />
                <script
                    async="async"
                    t-attf-src="https://cse.google.com/cse.js?cx=#{GOOGLE_SEARCH_ENGINE_ID}"
                />
            </t>
        </xpath>
    </template>
</odoo>
