<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='google_maps_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="google_search_setting">
                    <div class="o_setting_left_pane">
                        <field name="has_google_search" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="has_google_search" />
                        <span
                            class="fa fa-lg fa-globe"
                            title="Values set here are website-specific."
                            groups="website.group_multi_website"
                        />
                        <div class="text-muted">
                            Use Google Search on your website (Menu, snippets, ...)
                        </div>
                        <div
                            class="content-group"
                            attrs="{'invisible': [('has_google_search', '=', False)]}">
                            <div class="row mt16">
                                <label
                                    class="col-lg-3 o_light_label"
                                    string="API Key"
                                    for="google_search_api_key"
                                />
                                    <field
                                    name="google_search_api_key"
                                    attrs="{'required': [('has_google_search', '=', True)]}"
                                />
                            </div>
                        </div>
                    </div>
                 </div>
            </xpath>
        </field>
    </record>
</odoo>
