<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_announcement_stripe" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.announcement.stripe</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="webmaster_settings" position="after">
                <h2>Website Header Announcement Stripe</h2>
                <div
                    class="row mt16 o_settings_container"
                    id="website_header_announcement_stripe"
                >
                    <div
                        class="col-12 col-lg-12 o_setting_box"
                        id="website_header_announcement_stripe_settings"
                    >
                        <div class="o_setting_left_pane">
                            <field name="website_header_announcement_stripe_show" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="website_header_announcement_stripe_show" />
                            <div
                                class="content-group"
                                attrs="{'invisible': [('website_header_announcement_stripe_show', '=', False)]}"
                            >
                            <div class="text-muted">
                                Website Header Announcement Stripe Text
                            </div>
                            <div class="mt8">
                                <field name="website_header_announcement_stripe_text" />
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
