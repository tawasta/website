<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_website_form_header_stripe" model="ir.ui.view">
        <field name="name">website.form</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form" />
        <field name="arch" type="xml">
            <div name="other" position="after">
                <div name="header_stripe">
                    <group name="header_stripe">
                        <field name="header_announcement_stripe_show" />
                        <field
                            name="header_announcement_stripe_text"
                            attrs="{'invisible': [('header_announcement_stripe_show', '=', False)]}"
                        />
                    </group>
                </div>
            </div>
        </field>
    </record>
</odoo>
