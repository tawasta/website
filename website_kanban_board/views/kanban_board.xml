<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="assets_frontend" inherit_id="web.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/website_kanban_board/static/src/scss/kanban_board.scss"
            />
        </xpath>
    </template>

    <template id="kanban_board_assets" name="Assets for kanban board">
        <script
            type="text/javascript"
            src="/website_kanban_board/static/src/js/floatingscroll.min.js"
        />
        <script
            type="text/javascript"
            src="/website_kanban_board/static/src/js/scrollbar.js"
        />
    </template>

    <template id="kanban_board" name="Kanban Board on website">
        <div class="table-responsive fs-whatwg">
            <table class="table">
                <thead>
                    <tr>
                        <t t-foreach="stages" t-as="stage">
                            <th
                                t-attf-class="col-head col-{{int(12 / len(stages))}} text-center"
                                scope="col"
                            >
                                <span class="h3"><t t-esc="stage.name" /></span>
                            </th>
                        </t>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="stages" t-as="stage">
                        <td class="column">
                            <t t-foreach='objects' t-as='object'>
                                <t t-if="object.stage_id.id == stage.id">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <t t-esc="object.name" />
                                            </h5>
                                        </div>
                                    </div>
                                </t>
                            </t>
                        </td>
                    </t>
                </tbody>
            </table>
        </div>
        <t t-call-assets="website_kanban_board.kanban_board_assets" lazy_load="True" />
    </template>
</odoo>
