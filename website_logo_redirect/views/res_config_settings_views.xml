<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_logo_url_redirect" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.url.logo.redirect</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='domain_settings']" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="url_logo_redirect_settings">
                    <div class="o_setting_right_pane">
                        <label string="Logo URL" for="logo_url" />
                        <div class="text-muted">
                            Redirect website logo to this URL address.
                        </div>
                        <div class="mt8">
                            <field name="logo_url" />
                        </div>
                    </div>
                    <div class="o_setting_left_pane">
                        <field name="open_in_new_tab" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label
                            string="Open logo URL in new tab"
                            for="open_in_new_tab"
                        />
                        <div class="text-muted">
                            Whether logo URL opens in a new tab or not.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
