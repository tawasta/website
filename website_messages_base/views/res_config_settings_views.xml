<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.messages.base</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="600"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='webmaster_settings']" position="after">
                <h2>Website messages</h2>
                <div class="row mt16 o_settings_container mb-5" id="website_messages_settings">
                    <div id="website_messages_base_thread" class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="website_enable_reply"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="website_enable_reply"/>
                            <div class="text-muted">
                                If selected, users can reply to other users' messages on website
                            </div>
                            <div class="content-group" attrs="{'invisible': [('website_enable_reply', '=', False)]}">
                                <label for="message_thread_model_ids"/>
                                <div class="text-muted">
                                    Calculate threads for models' messages
                                </div>
                                <div class="mt16">
                                    <field name="message_thread_model_ids" widget="many2many_tags"
                                        options="{'no_create': True, 'no_open': True}"/>
                                </div>
                            </div>
                            <div attrs="{'invisible': [('website_enable_reply', '=', False)]}">
                                <button string="Calculate thread IDs" name="action_calculate_website_thread_id"
                                    type="object" class="btn-primary"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
