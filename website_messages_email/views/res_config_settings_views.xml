<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.messages.email</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="650"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_messages_settings']" position="inside">
                <div id="website_messages_email" class="col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <label for="message_email_model_ids"/>
                            <div class="text-muted">
                                Which models use the email template created for website messages
                            </div>
                            <div class="mt16">
                                <field name="message_email_model_ids" widget="many2many_tags"
                                    options="{'no_create': True, 'no_open': True}"/>
                            </div>
                        </div>
                        <div class="content-group">
                            <label for="message_email_mail_server_id"/>
                            <div class="text-muted">
                                Which mail server is used for website message emails
                            </div>
                            <div class="mt16">
                                <field name="message_email_mail_server_id"
                                    options="{'no_create': True, 'no_open': True}"/>
                            </div>
                        </div>
                        <div class="content-group">
                            <label for="message_email_from"/>
                            <div class="text-muted">
                                Which email address is used as sender
                            </div>
                            <div class="mt16">
                                <field name="message_email_from" />
                            </div>
                        </div>
                        <div class="content-group">
                            <label for="message_email_subject"/>
                            <div class="text-muted">
                                Use static subject for emails
                            </div>
                            <div class="mt16">
                                <field name="message_email_subject" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
