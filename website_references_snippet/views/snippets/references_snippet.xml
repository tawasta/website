<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- template for our snippet -->
    <template id="show_references" name="References - Dynamic">
        <section class="references">
            <div class="container">
                <div class="text-center py-5">
                    <h2 class="h1">Our References</h2>
                </div>

                <div class="row justify-content-center" id="res-references-row" />
            </div>
        </section>
    </template>

    <template
        id="assets_frontend"
        inherit_id="website.assets_frontend"
        name="Reference Front-end assets"
    >
        <xpath expr="." position="inside">

            <script
                type="text/javascript"
                src="/website_references_snippet/static/src/js/references.js"
            />
            <link
                rel="stylesheet"
                type="text/scss"
                href="/website_references_snippet/static/src/scss/references.scss"
            />
        </xpath>
    </template>
</odoo>
