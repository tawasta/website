<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.website.slides.allow.image.download</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_slides.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@id='elearning_selection_settings']" position="inside">
                <div class="col-12 col-lg-6" />
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="website_slides_store_uncompressed_images_setting"
                >
                    <div class="o_setting_left_pane">
                        <field name="website_slides_store_uncompressed_images" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="website_slides_store_uncompressed_images" />
                        <div class="text-muted">
                            Keep also uncompressed, high resolution versions of images
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6" />
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="website_slides_show_download_link_for_images_setting"
                >
                    <div class="o_setting_left_pane">
                        <field name="website_slides_show_download_link_for_images" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="website_slides_show_download_link_for_images" />
                        <div class="text-muted">
                            Show an image download link to the user on website. If uncompressed images are being stored, those are
                            provided. If not, then the highest possible quality versions of the compressed images.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
