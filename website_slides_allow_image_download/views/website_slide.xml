<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="slide_content_detailed"
        inherit_id="website_slides.slide_content_detailed"
    >
        <xpath
            expr="//ul[@class='nav nav-tabs o_wslides_lesson_nav']/li[last()]"
            position="after"
        >
            <t t-if="show_image_download_button">
                <a
                    t-attf-href="/slides/slide/#{str(slide.id)}/download_image"
                    class="btn btn-primary"
                >
                    <i class="fa fa-download" /> Download Image
                </a>
            </t>
        </xpath>
    </template>
</odoo>
