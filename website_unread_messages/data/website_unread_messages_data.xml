<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Possibility to turn of unread messages notifications (Toasts) -->
        <record id="website_unread_messages_notifications" model="ir.config_parameter" forcecreate="False">
            <field name="key">website_unread_messages.notifications</field>
            <field name="value" eval="True"/>
        </record>

        <!-- Possibility to turn of unread messages page -->
        <record id="website_unread_messages_page" model="ir.config_parameter" forcecreate="False">
            <field name="key">website_unread_messages.page</field>
            <field name="value" eval="True"/>
        </record>
    </data>
</odoo>
