<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Website Utilities assets">
        <xpath expr="//link[last()]" position="after">
            <!-- Plugins from cdn -->
            <link
                rel="stylesheet"
                type="text/css"
                href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"
            />
            <script
                type="text/javascript"
                src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"
            />

            <!-- Plugin initializing -->
            <script
                type="text/javascript"
                src="/website_utilities/static/src/js/loader.js"
            />
            <script
                type="text/javascript"
                src="/website_utilities/static/src/js/notifications.js"
            />
        </xpath>
    </template>
</odoo>
